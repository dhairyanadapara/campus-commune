<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
		<h1 class="h2">My Notes</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="btn-group mr-2">
				<form method="Get" action="/notes_entry">
					<button class="btn btn-sm btn-outline-secondary">Add Note</button>
				</form>
				<form method="Get" action="/notes">
					<button class="btn btn-sm btn-outline-secondary">Notes</button>
				</form>
			</div>
		</div>
	</div>

	{{#each resource}}
	<div class="card-body d-flex flex-column grid align-items-start">
		<strong class="d-inline-block mb-2 text-primary">{{subject}}</strong>
		<h3 class="mb-0">
			<a class="text-dark" href="#">{{title}}</a>
		</h3>
		<div class="mb-1 text-muted">{{semester}}</div>
		<p class="mb-1 text-muted">{{year}}</p>
		<p class="card-text mb-auto">{{hashtags}}</p>
		<a href="{{link}}">Link</a>
		<form method="POST" action="/notedelete/{{id}}?_method=DELETE">
                <input class="btn btn-sm btn-outline-secondary" type="submit" value="Delete" />
            </form>
	</div>
	{{/each}}
</main>