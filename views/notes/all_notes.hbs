
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
		<h1 class="h2">Notes</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="btn-group mr-2">
				<form method="Get" action="/notes_entry">
					<button class="btn btn-sm btn-outline-secondary">Add Note</button>
				</form>
				<form method="Get" action="/mynotes">
					<button class="btn btn-sm btn-outline-secondary">My Notes</button>
				</form>
			</div>
		</div>
	</div>

	{{!--0 --}} {{#each resource}}
	<div class="card-body d-flex flex-column grid align-items-start">
		<h3 class="mb-0">
			<a class="text-dark" href="#">{{subject}}</a>
		</h3>
		<div class="mb-1 text-muted">{{title}}</div>
		<p class="mb-1 text-muted">{{semester}}</p>
		<p class="card-text mb-auto">{{hashtags}}</p>
		<a href="{{link}}">Link</a>
	</div>
	{{/each}}
</main>